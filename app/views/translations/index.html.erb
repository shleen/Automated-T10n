<div class='container h-100'>
  <div class='w-100'>
		<div class='row'>
			<div class='col-md-6 offset-md-3'>
				<h3 class='mb-0'>Automated T10n</h3>
				<span class='text-muted'>Quick, effortless, & everything you never knew you needed.</span>
				<hr class='w-100'>
			</div>
		</div>
		<%= form_for @translation, url: translations_path, multipart:true do |f| %>
		<div class='row'>
			<div class='col-md-6 offset-md-3'>
				<div class='form-group'>
					<%= f.label :yml_file, "File to translate (.yml only please)" %>
					<%= f.file_field :yml_file, class: 'form-control-file', required: 'required' %>
				</div>
				<div class='row'>
					<div class='col-md-6'>
						<div class='form-group'>
							<%= f.label :from, "Translate from:" %>
							<%= f.select :from, options_for_select(@languages, selected: 'en'), {}, { class:'form-control' } %>
						</div>
					</div>
					<div class='col-md-6'>
						<div class='form-group'>
							<%= f.label :to, "Translate to:" %>
							<%= f.select :to, options_for_select(@languages), {}, { class:'form-control' } %>
						</div>
					</div>
				</div>
				<div class='form-group'>
					<%= f.submit @submit_text, class:'btn btn-secondary w-100', data: { disable_with: false } %>
					<span class='small'>Need help? Check out the guide <%= link_to "here", help_path %>.
					</span>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>